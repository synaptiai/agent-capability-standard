{
  "$schema": "https://claude.ai/schemas/settings/v1.json",
  "hooks": {
    "pretooluse_require_checkpoint": {
      "enabled": true,
      "description": "Require checkpoint before high-impact file modifications (SAFETY layer)",
      "configurable": true
    },
    "posttooluse_log_tool": {
      "enabled": true,
      "description": "Log all tool usage for audit trail (SAFETY layer)",
      "configurable": true
    }
  },
  "validation": {
    "strict_mode": false,
    "require_provenance": true,
    "trust_decay_enabled": true,
    "default_trust_level": 0.8
  },
  "world_modeling": {
    "enable_digital_twin": false,
    "state_persistence": "memory",
    "max_state_history": 100
  }
}
